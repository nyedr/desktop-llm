{
  "functions": [
    {
      "name": "get_current_weather",
      "module_path": "app.functions.types.tools.weather_tools",
      "function_name": "WeatherTool",
      "type": "tool",
      "description": "Get current weather information for a location",
      "parameters": {
        "type": "object",
        "properties": {
          "location": {
            "type": "string",
            "description": "Location to get weather for"
          },
          "unit": {
            "type": "string",
            "enum": ["celsius", "fahrenheit"],
            "description": "Temperature unit",
            "default": "fahrenheit"
          }
        },
        "required": ["location"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "location": {
            "type": "string",
            "description": "The location requested"
          },
          "temperature": {
            "type": "number",
            "description": "The current temperature"
          },
          "unit": {
            "type": "string",
            "description": "The temperature unit (celsius or fahrenheit)"
          },
          "conditions": {
            "type": "string",
            "description": "The current weather conditions"
          },
          "humidity": {
            "type": "number",
            "description": "The current humidity percentage"
          },
          "wind_speed": {
            "type": "number",
            "description": "The current wind speed"
          }
        }
      },
      "enabled": true,
      "dependencies": []
    },
    {
      "name": "calculator",
      "module_path": "app.functions.types.tools.calculator",
      "function_name": "CalculatorTool",
      "type": "tool",
      "description": "Performs basic arithmetic calculations",
      "parameters": {
        "type": "object",
        "properties": {
          "operation": {
            "type": "string",
            "enum": ["add", "subtract", "multiply", "divide"],
            "description": "The arithmetic operation to perform"
          },
          "a": {
            "type": "number",
            "description": "First operand"
          },
          "b": {
            "type": "number",
            "description": "Second operand"
          }
        },
        "required": ["operation", "a", "b"]
      },
      "output_schema": {
        "type": "number",
        "description": "The result of the calculation"
      },
      "enabled": true,
      "dependencies": []
    },
    {
      "name": "read_file",
      "module_path": "app.functions.types.tools.filesystem_tools",
      "function_name": "ReadFileTool",
      "type": "tool",
      "description": "Read contents of a file",
      "parameters": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to the file to read"
          }
        },
        "required": ["path"]
      },
      "enabled": true,
      "dependencies": []
    },
    {
      "name": "write_file",
      "module_path": "app.functions.types.tools.filesystem_tools",
      "function_name": "WriteFileTool",
      "type": "tool",
      "description": "Write content to a file",
      "parameters": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to write the file to"
          },
          "content": {
            "type": "string",
            "description": "Content to write to the file"
          }
        },
        "required": ["path", "content"]
      },
      "enabled": true,
      "dependencies": []
    },
    {
      "name": "list_directory",
      "module_path": "app.functions.types.tools.filesystem_tools",
      "function_name": "ListDirectoryTool",
      "type": "tool",
      "description": "List contents of a directory",
      "parameters": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to the directory to list"
          }
        },
        "required": ["path"]
      },
      "enabled": true,
      "dependencies": []
    },
    {
      "name": "search_files",
      "module_path": "app.functions.types.tools.filesystem_tools",
      "function_name": "SearchFilesTool",
      "type": "tool",
      "description": "Search for files matching a pattern",
      "parameters": {
        "type": "object",
        "properties": {
          "pattern": {
            "type": "string",
            "description": "Pattern to search for"
          },
          "exclude_patterns": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Patterns to exclude from search"
          }
        },
        "required": ["pattern"]
      },
      "enabled": true,
      "dependencies": []
    },
    {
      "name": "web_scrape",
      "module_path": "app.functions.types.tools.web_scrape_tool",
      "function_name": "WebScrapeTool",
      "type": "tool",
      "description": "Scrape and process web pages using Jina Reader (r.jina.ai)",
      "parameters": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "URL of the web page to scrape"
          }
        },
        "required": ["url"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "description": "The scraped content from the webpage"
          },
          "title": {
            "type": "string",
            "description": "The extracted title from the content"
          },
          "url": {
            "type": "string",
            "description": "The original URL that was scraped"
          },
          "cleaned": {
            "type": "boolean",
            "description": "Whether the content was cleaned of URLs"
          }
        }
      },
      "enabled": true,
      "dependencies": ["requests"]
    }
  ],
  "filters": [
    {
      "name": "text_modifier",
      "module_path": "app.functions.types.filters.text_modifier",
      "function_name": "TextModifierFilter",
      "type": "filter",
      "description": "Modifies text content in both inlet and outlet",
      "enabled": true,
      "dependencies": [],
      "priority": 1
    }
  ],
  "pipelines": [
    {
      "name": "multi_step_processor",
      "module_path": "app.functions.types.pipelines.multi_step",
      "function_name": "MultiStepPipeline",
      "type": "pipeline",
      "description": "Processes data through multiple steps",
      "enabled": true,
      "dependencies": [],
      "config": {
        "max_steps": 3,
        "timeout_per_step": 30
      }
    }
  ]
}
